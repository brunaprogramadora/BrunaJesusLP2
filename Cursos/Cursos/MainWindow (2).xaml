<Window x:Class="Cursos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,0,16,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1F292C" Offset="1"/>
                <GradientStop Color="#FFA8D8EA" Offset="0.003"/>
                <GradientStop Color="#FF1CB5E8"/>
                <GradientStop Color="#FFA7D6E8"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="cursos" Content="CURSOS PARA UNIVERSIDADE" HorizontalAlignment="Left" Height="53" Margin="93,10,0,0" VerticalAlignment="Top" Width="327" FontFamily="Aharoni" FontSize="22" Foreground="#FF0C0B0B" Background="#00000000"/>
        <Button x:Name="pagCadastro_btn" Content="Cadastrar" HorizontalAlignment="Left" Height="48" Margin="48,119,0,0" VerticalAlignment="Top" Width="155" FontFamily="Andalus" FontSize="18" FontWeight="Bold" Background="White" Click="pagCadastro_btn_Click"/>
        <Button x:Name="pagCursos_btn_" Content="Cursos" HorizontalAlignment="Left" Height="48" Margin="283,119,0,0" VerticalAlignment="Top" Width="155" FontFamily="Andalus" FontSize="18" FontWeight="Bold" Background="White" />

    </Grid>
</Window>
