<Window x:Name="Cursos1" x:Class="Cursos.Cursos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cursos" Height="300" Width="505">
    <Grid Margin="0,0,2,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FFA7D6E8"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="119*"/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="nomes_lst" HorizontalAlignment="Left" Height="246" VerticalAlignment="Top" Width="185" Margin="10,14,0,0" Background="#FFA7D6E8" SelectionChanged="nomes_lst_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="textodesc_txt" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="245" Margin="254,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Background="#FFA7D6E8"/>

    </Grid>
</Window>
